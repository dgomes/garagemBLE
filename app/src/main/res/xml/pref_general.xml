<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_key_shared_key"
        android:title="@string/pref_title_shared_key"
        android:defaultValue="@string/pref_default_shared_key"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLength="12"
        android:summary="@string/pref_summary_shared_key"/>

    <EditTextPreference
        android:key="@string/pref_key_id"
        android:title="@string/pref_title_id"
        android:defaultValue="@string/pref_default_id"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:maxLength="4"
        android:summary="@string/pref_default_id"/>


</PreferenceScreen>
